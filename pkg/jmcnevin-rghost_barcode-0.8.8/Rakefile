require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('jmcnevin-rghost_barcode', '0.8.8') do |p|
  p.author = ['Shairon Toledo', 'Jeremy McNevin']
  p.email = ['shairon.toledo@gmail.com', 'jeremy@spokoino.net']
  p.runtime_dependencies = ['rghost']
  p.summary = <<-EOF
RGhost Barcode is adapter from Barcode Writer. The Barcode Writer in Pure
Postscript is an award-winning open source barcode maker, as used by NASA.
EOF
  p.url = 'http://github.com/jmcnevin/rghost-barcode'
end

